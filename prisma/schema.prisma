// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // TEMPORARY: Using SQLite for local development (Supabase is under maintenance)
  // When Supabase is back online, change back to:
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model DataEntry {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  value     Float
  category  String
  source    String
}